---

<MainLayout title="Program">
  <Navigation />

  <main>
    <h1>Program 2024</h1>
    <div class="day-section flex-row gap-l flex-align-center mb-l">
      <h2>Thursday</h2>
      <hr />
    </div>

    <div class="uneven-grid">
      {
        artists
          .filter((item) => item?.playingdate === thursday2024)
          .map((item, i) => <ArtistCard data={item} gridIndex={i} />)
      }
    </div>

    <div class="day-section flex-row gap-l flex-align-center mb-l">
      <h2>Friday</h2>
      <hr />
    </div>

    <div class="uneven-grid">
      {
        artists
          .filter((item) => item?.playingdate === friday2024)
          .map((item, i) => <ArtistCard data={item} gridIndex={i} />)
      }
    </div>
  </main>
  <hr />
  <Ticketbanner />

  <Footer />
</MainLayout>

<style>
  .uneven-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(155px, 1fr));
    column-gap: var(--spacing-xlarge);
    row-gap: 2px;
    margin-bottom: var(--spacing-large);
  }

  h2 {
    margin-bottom: 0;
  }

  .day-section hr {
    height: 1px;
    width: 90%;
  }

  @media (min-width: 768px) {
    .uneven-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    }
  }
</style>
