---
import FacebookIcon from "../components/icons/Facebook-icon.astro";
import SoundcloudIcon from "../components/icons/Soundcloud-icon.astro";
import InstagramIcon from "../components/icons/Instagram-icon.astro";
import Logo from "../components/icons/Logo.astro";
---

<div class="footer-container">
  <div class="flex-col flex-center mb-l">
    <h4>shortcuts</h4>
    <a href="/tickets">Tickets</a>
    <a href="/program">Program</a>
    <a href="/practical-info">Practical info</a>
    <a href="/about-us">About us</a>
  </div>

  <div class="flex-col flex-center mb-l">
    <h4>Join our newsletter</h4>

    <form class="mb-l">
      <input type="email" placeholder="EMAIL" />
      <img src="../../public/icons/signup-button.svg" alt="" /><input
        class="signup-button"
        type="submit"
        value=" "
      />
    </form>

    <a class="pc-only" href="/">
      <Logo />
    </a>
  </div>

  <div>
    <div class="flex-col flex-center mb-l">
      <h4>Contact us</h4>
      <p class="mb-m">Refshalevej 193, 1432 Copenhagen</p>
      <p>info@nusnus.dk</p>
    </div>

    <div class="flex-col flex-center mb-l">
      <h4>Follow us</h4>
      <div class="flex-row gap-m flex-center">
        <a href="https://www.facebook.com/Karruselfestival">
          <FacebookIcon />
        </a>
        <a href="https://on.soundcloud.com/pZ4aZX9xPWEj54818">
          <SoundcloudIcon />
        </a>
        <a href="https://www.instagram.com/karruselfest">
          <InstagramIcon />
        </a>
      </div>
    </div>
  </div>

  <a class="pc-hide" href="/">
    <Logo />
  </a>
</div>

<style>
  .footer-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    & div h4 {
      margin-bottom: var(--spacing-medium);
    }
  }

  a,
  p {
    font-size: 0.9rem;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  input {
    padding: 12px;
    border: 1px solid var(--text-color);
    color: var(--text-color);
    opacity: 0.5;
  }

  input.signup-button {
    border: 3px solid var(--tertiary-color);
    box-shadow: 0 0 10px var(--tertiary-color);
    color: var(--text-color);
    opacity: 1;
  }

  img {
    width: 150px;
    height: 100%;
  }

  @media (min-width: 768px) {
    .footer-container {
      padding: var(--spacing-large);
      flex-direction: row;
      justify-content: space-between;

      & div h4 {
        margin-bottom: var(--spacing-large);
      }
    }

    a {
      margin-bottom: var(--spacing-medium);
    }
  }
</style>
