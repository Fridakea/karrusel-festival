---
import MainLayout from "../layouts/Main-layout.astro";
import Footer from "../components/Footer.astro";
import TicketCard from "../components/Ticket-card.astro";
import Line from "../components/Line.astro";
import FaqRow from "../components/Faq-row.astro";
const { title } = Astro.props;
---

<MainLayout title="Tickets">
    <main class="tickets_wrapper">
        <h1>FULL FESTIVAL PASS</h1>
        <h4>COPENHAGEN</h4>
        <TicketCard />
        <section class="faq_wrapper">
            <h2>IMPORTANT INFO</h2>
            <Line />
            <FaqRow topic="What is the age limit?" text="18 years old" statusOpen={true}/>
            <Line />
            <FaqRow topic="Can I upgrade my ticket?" statusClosed={true}/>
            <Line />
            <FaqRow topic="Is there a ticket fee on top?" statusClosed={true}/>
            <Line />
            <FaqRow topic="How do I exchange my PDF ticket for a wrist band?" statusClosed={true}/>
            <Line />
        </section>
    </main>



    <Footer />
</MainLayout>

<style>
    .tickets_wrapper {
        display: flex;
        flex-direction: column;
        gap: 40px;
        margin-bottom: 60px;
    }

    .faq_wrapper {
        margin: 60px 0 120px 0;
    }

    @media (min-width: 768px) {
        .tickets_wrapper {
        gap: 80px;
        margin-bottom: 120px;
    }


    }

</style>
