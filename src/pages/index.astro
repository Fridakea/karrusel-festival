---
import MainLayout from "../layouts/Main-layout.astro";
import Navigation from "../components/Navigation.astro";
import Countdown from "../components/Countdown.astro";
import Footer from "../components/Footer.astro";
import FooterNy from "../components/Footerny.astro";
import ResponsiveButton from "../components/buttons/Responsive-button.astro";
import ResponsiveOutlinedButton from "../components/buttons/Responsive-outlined-button.astro";
const { buttonText } = Astro.props;
const { title } = Astro.props;
---

<MainLayout
  title="Karrusel Festival"
  description="Karrusel Festivals landing page"
>
  <Navigation />

  <div class="hero-section flex-row flex-center">
    <h1>See you at Karrusel Festival</h1>
    <Countdown />
    <div class="button_box">
      <ResponsiveButton textButton="BUY TICKET" />
      <ResponsiveOutlinedButton outlinedText="PROGRAM" />
    </div>
  </div>

  <FooterNy />
</MainLayout>

<style>
  .hero-section {
    width: 100%;
    height: 85vh;
    background-image: url("../hero-bg.webp");
    background-size: cover;
    display: flex;
    flex-direction: column;

    & h1 {
      max-width: 1200px;
      background-color: transparent;
      font-size: 3rem;
    }
  }

  .button_box {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  @media (min-width: 768px) {
    .hero-section h1 {
      font-size: 5rem;
    }

    .button_box {
      flex-direction: row;
      gap: 16px;
    }
  }
</style>
